<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#898888"

    android:padding="16dp">

    <!-- Toolbar -->







    <!-- Back Button and Text -->
    <LinearLayout
        android:id="@+id/back_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"

        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="2dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- QR Code -->
    <ImageView
        android:id="@+id/qr_code_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/better_qr"
        android:contentDescription="QR Code"
        android:scaleType="fitCenter"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/back_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scan_now_button"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="16dp" />

    <!-- Scan Now Button -->
    <Button
        android:id="@+id/scan_now_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Scan Now"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        android:minHeight="56dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
