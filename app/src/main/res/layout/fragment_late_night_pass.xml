<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header -->
    <TextView
        android:id="@+id/text_late_night_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Late Night/\nOvernight Pass"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Content Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_pass_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_late_night_pass">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Dormer -->
            <TextView
                android:id="@+id/label_dormer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dormer:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_dormer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="YOR BRIAR"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Room Number -->
            <TextView
                android:id="@+id/label_room_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Number:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_room_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="E138A"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Student Number -->
            <TextView
                android:id="@+id/label_student_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Number:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_student_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="202012345"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Type of Pass -->
            <TextView
                android:id="@+id/label_pass_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of Pass:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_pass_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="ON"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Destination -->
            <TextView
                android:id="@+id/label_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="OSTANIA"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Date of Departure -->
            <TextView
                android:id="@+id/label_departure_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Departure:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_departure_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="10/10/24"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Expected Date of Arrival -->
            <TextView
                android:id="@+id/label_arrival_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expected Date of Arrival:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_arrival_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="13/10/24"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Expected Time of Arrival -->
            <TextView
                android:id="@+id/label_arrival_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expected Time of Arrival:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_arrival_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1:00PM"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/card_view_pass_details">

        <!-- Edit Button -->
        <Button
            android:id="@+id/btn_edit_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/button_gray"
            android:text="Edit details"
            android:textColor="@color/black"
            app:strokeColor="@color/material_dynamic_neutral60"
            app:strokeWidth="1dp" />

        <!-- Delete Button -->
        <Button
            android:id="@+id/btn_delete_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_red"
            android:text="Delete request"
            android:textColor="@color/black"
            app:strokeColor="@color/material_dynamic_neutral60"
            app:strokeWidth="1dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>